{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "jest": true
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-indent": ["error", 4],
    "react/jsx-indent-props": ["error", 4],
    "react/jsx-fragments": ["off", "element"],
    "react/jsx-props-no-spreading": ["off"],
    "indent": ["error", 4]
  },
  "globals": {
    "localStorage": true
  }
}

{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "lib": [
            "esnext",
            "es6",
            "dom"
        ],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "strictNullChecks": true,
        "outDir": "build/dist",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "build",
        "node_modules",
        "**/*.spec.ts"
    ]
}
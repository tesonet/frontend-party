{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "paths": {
      "*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@containers/*": ["./src/containers/*"],
      "@assets/*": ["./src/assets/*"],
      "@redux/*": ["./src/redux/*"],
      "@layouts/*": ["src/layouts/*"],
      "@theme/*": ["./src/theme/*"],
      "@utils/*": ["./src/utils/*"],
      "@pages/*": ["./src/pages/*"],
      "@routes/*": ["./src/routes/*"],
      "@typings/*": ["./src/typings/*"],
      "@hooks/*": ["./src/hooks/*"]
    },
    "types": ["react", "jest", "node"],
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": ["src/**/*", "typings", "jest/setupTests.ts"],
  "exclude": ["node_modules"]
}

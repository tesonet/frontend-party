{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "esnext",
      "es6",
      "dom"
    ],
    "jsx": "react",
    "outDir": "build/dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}